<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.cei.sdbg.resume.BasicInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:textColor="@color/textColorWhite"
            android:background="@color/colorDarkGray"
            android:textSize="28sp"
            android:letterSpacing="0.15"
            android:text="@string/filling_info"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorDarkGray">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/ico_color1"
                        />
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="155dp"
                        android:paddingBottom="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="18sp"
                        android:letterSpacing="0.15"
                        android:textColor="@color/colorHeaderGreen"
                        android:text="@string/header_basicinfo"
                        />
                </RelativeLayout>
    
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/ico_black2"
                        />
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="155dp"
                        android:paddingBottom="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="18sp"
                        android:letterSpacing="0.15"
                        android:textColor="@color/colorHeaderGray"
                        android:text="@string/header_education"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/ico_black3"
                        />
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="155dp"
                        android:paddingBottom="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="18sp"
                        android:letterSpacing="0.15"
                        android:textColor="@color/colorHeaderGray"
                        android:text="@string/header_work"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/ico_black4"
                        />
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="155dp"
                        android:paddingBottom="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="18sp"
                        android:letterSpacing="0.15"
                        android:textColor="@color/colorHeaderGray"
                        android:text="@string/header_review"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/ico_black5"
                        />
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="155dp"
                        android:paddingBottom="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="18sp"
                        android:letterSpacing="0.15"
                        android:textColor="@color/colorHeaderGray"
                        android:text="@string/header_complete"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_marginTop="58dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="147dp"
                    android:src="@drawable/ico_arrow"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="125dp"
                    android:src="@drawable/ico_arrow"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="135dp"
                    android:src="@drawable/ico_arrow"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="135dp"
                    android:src="@drawable/ico_arrow"
                    />
            </LinearLayout>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:id="@+id/scrollview"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="153dp"
                        android:layout_height="48dp"
                        android:textSize="20sp"
                        android:letterSpacing="0.2"
                        android:text="@string/title_name"
                        android:id="@+id/name_textview"
                        />
                    <EditText
                        android:layout_marginStart="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:letterSpacing="0.15"
                        android:inputType="textPersonName"
                        android:hint="@string/hint_name"
                        android:id="@+id/name_edittext"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="153dp"
                        android:layout_height="48dp"
                        android:letterSpacing="0.15"
                        android:textSize="20sp"
                        android:text="@string/title_id_number"
                        android:id="@+id/id_number_textview"
                        />
                    <EditText
                        android:layout_marginStart="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:letterSpacing="0.15"
                        android:inputType="textCapSentences"
                        android:hint="@string/hint_id_number"
                        android:id="@+id/id_number_edittext"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:baselineAligned="true"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="153dp"
                        android:layout_height="48dp"
                        android:letterSpacing="0.2"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:text="@string/title_gender"
                        android:id="@+id/gender_textview"
                        />
                    <RadioGroup
                        android:layout_marginStart="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        android:id="@+id/gender_radiogroup"
                        >
                        <RadioButton
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:text="@string/male"
                            android:checked="true"
                            android:id="@+id/male_radiobutton"
                            />
                        <RadioButton
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:text="@string/female"
                            android:id="@+id/female_radiobutton"
                            android:layout_marginStart="35dp"
                            />
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="153dp"
                        android:layout_height="48dp"
                        android:letterSpacing="0.15"
                        android:textSize="20sp"
                        android:text="@string/title_birthday"
                        android:id="@+id/birthday_textview"
                        />
                    <EditText
                        android:layout_marginStart="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:letterSpacing="0.15"
                        android:gravity="center_horizontal"
                        android:hint="@string/hint_date"
                        android:id="@+id/birthday_edittext"
                        android:focusable="false"
                        android:onClick="onBirthdayClicked"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="153dp"
                        android:layout_height="48dp"
                        android:letterSpacing="0.15"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:text="@string/title_military"
                        android:id="@+id/military_textview"
                        />
                    <RadioGroup
                        android:layout_marginStart="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/military_radiogroup"
                        >
                        <RadioButton
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:letterSpacing="0.15"
                            android:text="@string/military_none"
                            android:id="@+id/military_none_radiobutton"
                            android:checked="true"
                            />
                        <RadioButton
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:letterSpacing="0.15"
                            android:text="@string/military_waived"
                            android:id="@+id/military_waived_radiobutton"
                            android:layout_marginStart="35dp"
                            />
                        <RadioButton
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:letterSpacing="0.15"
                            android:text="@string/military_completed"
                            android:id="@+id/military_completed_radiobutton"
                            android:layout_marginStart="35dp"
                            />
                        <RadioButton
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:letterSpacing="0.15"
                            android:text="@string/military_current"
                            android:id="@+id/military_current_radiobutton"
                            android:layout_marginStart="35dp"
                            />
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="153dp"
                        android:layout_height="48dp"
                        android:letterSpacing="0.15"
                        android:textSize="20sp"
                        android:text="@string/title_phone"
                        android:id="@+id/phonenumber_textview"
                        />
                    <EditText
                        android:layout_marginStart="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:letterSpacing="0.15"
                        android:hint="@string/hint_phone"
                        android:inputType="phone"
                        android:id="@+id/phone_edittext"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="153dp"
                        android:layout_height="48dp"
                        android:letterSpacing="0.15"
                        android:textSize="20sp"
                        android:text="@string/title_email"
                        android:id="@+id/email_textview"
                        />
                    <EditText
                        android:layout_marginStart="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:letterSpacing="0.15"
                        android:maxLines="1"
                        android:inputType="textEmailAddress"
                        android:hint="@string/hint_email"
                        android:id="@+id/email_edittext"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="133dp"
                        android:layout_height="48dp"
                        android:letterSpacing="0.15"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:text="@string/title_address"
                        android:id="@+id/address_textview"
                        />
                    <LinearLayout
                        android:layout_marginStart="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:layout_gravity="left"
                        >
                    <Spinner
                        android:layout_width="130dp"
                        android:layout_height="48dp"
                        android:letterSpacing="0.15"
                        android:id="@+id/city_spinner"
                        />
                    <Spinner
                        android:layout_marginStart="80dp"
                        android:layout_width="130dp"
                        android:layout_height="48dp"
                        android:letterSpacing="0.15"
                        android:id="@+id/region_spinner"
                        />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:letterSpacing="0.15"
                    android:textColor="@color/colorRed"
                    android:text="@string/check_data_again"
                    android:visibility="invisible"
                    android:id="@+id/check_data_textview"
                    />
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="31dp"
            android:layout_marginRight="81dp"
            android:orientation="vertical"
            android:gravity="bottom|right">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_next"
                android:letterSpacing="0.15"
                android:textSize="18sp"
                android:textColor="@color/textColorWhite"
                android:textAlignment="center"
                android:text="@string/next_step"
                android:onClick="onNextButtonClicked"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
