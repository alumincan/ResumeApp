<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.cei.sdbg.resume.AgreementActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="45dp"
        android:paddingLeft="45dp"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="67dp"
            android:letterSpacing="0.16"
            android:textSize="42sp"
            android:text="@string/legal_announcement"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/pic_compallogo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:textSize="22sp"
            android:letterSpacing="0.5"
            android:lineSpacingMultiplier="1.0"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:text="@string/legal_content_part1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:textSize="22sp"
            android:letterSpacing="0.5"
            android:lineSpacingMultiplier="1.2"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:text="@string/legal_content_part2"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84dp"
            android:layout_marginStart="30dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:letterSpacing="0.3"
            android:text="@string/agree_content"
            android:onClick="onCheckBoxClicked"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_gravity="bottom"
                android:background="@drawable/btn_exit_system"
                android:text="@string/no_exit_system"
                android:textSize="18sp"
                android:textColor="@color/textColorWhite"
                android:onClick="onExitButtonClicked"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="320dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/btn_enter_system"
                android:textSize="18sp"
                android:text="@string/yes_enter_system"
                android:textColor="@color/textColorWhite"
                android:enabled="false"
                android:onClick="onEnterButtonClicked"
                android:id="@+id/enter_button" />

        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
