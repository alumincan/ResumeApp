<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="444dp"
        android:layout_height="540dp"
        android:orientation="vertical"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="18dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="0.15"
            android:gravity="center_horizontal"
            android:textSize="36sp"
            android:text="@string/advance_setting"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="54dp"
            android:background="@drawable/background_selector"
            android:letterSpacing="0.15"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/textColorWhite"
            android:text="@string/edit_event"
            android:clickable="true"
            android:onClick="onEditEventButtonClicked"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_selector"
            android:letterSpacing="0.15"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/textColorWhite"
            android:text="@string/edit_job_function"
            android:clickable="true"
            android:onClick="onEditJobFunctionButtonClicked"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_selector"
            android:letterSpacing="0.15"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/textColorWhite"
            android:text="@string/upload"
            android:clickable="true"
            android:onClick="onUploadButtonClicked"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom|right"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_next_4_words"
                android:letterSpacing="0.15"
                android:textSize="18sp"
                android:textColor="@color/textColorWhite"
                android:text="@string/exit_settings"
                android:onClick="onExitSettingsButtonClicked"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>