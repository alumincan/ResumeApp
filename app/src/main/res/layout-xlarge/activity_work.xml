<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.cei.sdbg.resume.WorkActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:letterSpacing="0.15"
            android:textColor="@color/textColorWhite"
            android:background="@color/colorDarkGray"
            android:textSize="28sp"
            android:text="@string/filling_info"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorDarkGray">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/ico_black1"
                        />
                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="155dp"
                        android:paddingBottom="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="18sp"
                        android:letterSpacing="0.15"
                        android:textColor="@color/colorHeaderGray"
                        android:text="@string/header_basicinfo"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/ico_black2"
                        />
                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="155dp"
                        android:paddingBottom="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="18sp"
                        android:letterSpacing="0.15"
                        android:textColor="@color/colorHeaderGray"
                        android:text="@string/header_education"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/ico_color3"
                        />
                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="155dp"
                        android:paddingBottom="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="18sp"
                        android:letterSpacing="0.15"
                        android:textColor="@color/colorHeaderBlue"
                        android:text="@string/header_work"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/ico_black4"
                        />
                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="155dp"
                        android:paddingBottom="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="18sp"
                        android:letterSpacing="0.15"
                        android:textColor="@color/colorHeaderGray"
                        android:text="@string/header_review"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/ico_black5"
                        />
                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="155dp"
                        android:paddingBottom="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="18sp"
                        android:letterSpacing="0.15"
                        android:textColor="@color/colorHeaderGray"
                        android:text="@string/header_complete"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_marginTop="58dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="147dp"
                    android:src="@drawable/ico_arrow"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="135dp"
                    android:src="@drawable/ico_arrow"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="135dp"
                    android:src="@drawable/ico_arrow"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="135dp"
                    android:src="@drawable/ico_arrow"
                    />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="153dp"
                    android:layout_height="48dp"
                    android:letterSpacing="0.15"
                    android:textSize="20sp"
                    android:text="@string/title_futureplan"
                    android:id="@+id/futureplan_textview"
                    />
                <Spinner
                    android:layout_marginStart="20dp"
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:id="@+id/futureplan_spinner"
                    android:textSize="20sp"
                    />
                <EditText
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:visibility="invisible"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="20sp"
                    android:id="@+id/edit_other_feature"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="153dp"
                    android:layout_height="48dp"
                    android:letterSpacing="0.15"
                    android:textSize="20sp"
                    android:text="@string/title_jobtype"
                    android:id="@+id/jobtype_textview"
                    />
                <Spinner
                    android:layout_marginStart="20dp"
                    android:layout_width="250dp"
                    android:layout_height="48dp"
                    android:id="@+id/jobtype_spinner"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="153dp"
                    android:layout_height="48dp"
                    android:letterSpacing="0.15"
                    android:textSize="20sp"
                    android:text="@string/title_jobfunction"
                    android:id="@+id/jobfunction_textview"
                    />
                <Spinner
                    android:layout_marginStart="20dp"
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:id="@+id/jobfunction_spinner"
                    android:textSize="20sp"
                    />
                <EditText
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:visibility="invisible"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="20sp"
                    android:id="@+id/edit_other_interview"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="153dp"
                    android:layout_height="48dp"
                    android:letterSpacing="0.15"
                    android:textSize="20sp"
                    android:text="@string/title_availabledate"
                    android:id="@+id/available_textview"
                    />
                <EditText
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:letterSpacing="0.15"
                    android:hint="@string/hint_date"
                    android:id="@+id/available_edittext"
                    android:focusable="false"
                    android:onClick="onAvailableClicked"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:letterSpacing="0.15"
                android:textColor="@color/colorRed"
                android:text="@string/check_data_again"
                android:visibility="invisible"
                android:id="@+id/check_data_textview"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="31dp"
                android:layout_marginEnd="21dp"
                android:orientation="vertical"
                android:gravity="bottom|right">
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/btn_next"
                    android:letterSpacing="0.15"
                    android:textSize="18sp"
                    android:textColor="@color/textColorWhite"
                    android:textAlignment="center"
                    android:text="@string/next_step"
                    android:onClick="onNextButtonClicked"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
