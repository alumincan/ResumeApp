<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.cei.sdbg.resume.EducationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:letterSpacing="0.15"
            android:textColor="@color/textColorWhite"
            android:background="@color/colorDarkGray"
            android:textSize="28sp"
            android:text="@string/filling_info"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorDarkGray">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/ico_black1"
                        />
                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="155dp"
                        android:paddingBottom="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="18sp"
                        android:letterSpacing="0.15"
                        android:textColor="@color/colorHeaderGray"
                        android:text="@string/header_basicinfo"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/ico_color2"
                        />
                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="155dp"
                        android:paddingBottom="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="18sp"
                        android:letterSpacing="0.15"
                        android:textColor="@color/colorHeaderYellow"
                        android:text="@string/header_education"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/ico_black3"
                        />
                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="155dp"
                        android:paddingBottom="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="18sp"
                        android:letterSpacing="0.15"
                        android:textColor="@color/colorHeaderGray"
                        android:text="@string/header_work"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/ico_black4"
                        />
                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="155dp"
                        android:paddingBottom="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="18sp"
                        android:letterSpacing="0.15"
                        android:textColor="@color/colorHeaderGray"
                        android:text="@string/header_review"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/ico_black5"
                        />
                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="155dp"
                        android:paddingBottom="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="18sp"
                        android:letterSpacing="0.15"
                        android:textColor="@color/colorHeaderGray"
                        android:text="@string/header_complete"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_marginTop="58dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="147dp"
                    android:src="@drawable/ico_arrow"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="135dp"
                    android:src="@drawable/ico_arrow"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="135dp"
                    android:src="@drawable/ico_arrow"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="135dp"
                    android:src="@drawable/ico_arrow"
                    />
            </LinearLayout>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="153dp"
                        android:layout_height="48dp"
                        android:letterSpacing="0.15"
                        android:textSize="20sp"
                        android:text="@string/title_highesteducation"
                        android:id="@+id/highesteducation_textview"
                        />
                    <Spinner
                        android:layout_marginStart="20dp"
                        android:layout_width="200dp"
                        android:layout_height="48dp"
                        android:id="@+id/highesteducation_spinner"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="153dp"
                        android:layout_height="48dp"
                        android:letterSpacing="0.15"
                        android:textSize="20sp"
                        android:text="@string/title_school"
                        android:id="@+id/school_textview"
                        />
                    <EditText
                        android:layout_marginStart="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:letterSpacing="0.15"
                        android:inputType="text"
                        android:maxLines="1"
                        android:hint="@string/hint_school"
                        android:id="@+id/school_edittext"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="153dp"
                    android:layout_height="48dp"
                    android:letterSpacing="0.15"
                    android:textSize="20sp"
                    android:text="@string/title_major"
                    android:id="@+id/major_textview"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:letterSpacing="0.15"
                    android:inputType="text"
                    android:maxLines="1"
                    android:hint="@string/hint_major"
                    android:id="@+id/major_edittext"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"
                    />
            </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="153dp"
                        android:layout_height="48dp"
                        android:letterSpacing="0.15"
                        android:textSize="20sp"
                        android:text="@string/title_schoolperiod"
                        android:id="@+id/schoolperiod_textview"
                        />
                    <EditText
                        android:layout_marginStart="20dp"
                        android:layout_width="255dp"
                        android:layout_height="48dp"
                        android:letterSpacing="0.05"
                        android:hint="@string/hint_date"
                        android:focusable="false"
                        android:id="@+id/schoolstart_edittext"
                        android:textSize="20sp"
                        android:onClick="onSchoolStartButtonClicked"
                        />
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:textSize="20sp"
                        android:text="@string/between"/>
                    <EditText
                        android:layout_width="255dp"
                        android:layout_height="48dp"
                        android:letterSpacing="0.05"
                        android:focusable="false"
                        android:hint="@string/hint_date"
                        android:id="@+id/schoolend_edittext"
                        android:textSize="20sp"
                        android:onClick="onSchoolEndButtonClicked"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:baselineAligned="true"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="153dp"
                        android:layout_height="48dp"
                        android:letterSpacing="0.15"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:text="@string/title_graduatethisyear"
                        android:id="@+id/graduatethisyear_textview"
                        />
                    <RadioGroup
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/graduatethisyear_radiogroup"
                        >
                        <RadioButton
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:text="@string/yes"
                            android:checked="true"
                            android:id="@+id/yes_radiobutton"
                            />
                        <RadioButton
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:text="@string/no"
                            android:id="@+id/no_radiobutton"
                            android:layout_marginStart="35dp"
                            />
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="153dp"
                        android:layout_height="48dp"
                        android:gravity="top"
                        android:letterSpacing="0.15"
                        android:textSize="20sp"
                        android:text="@string/title_skill"
                        android:id="@+id/skill_textview"
                        />
                    <EditText
                        android:layout_marginStart="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.15"
                        android:hint="@string/hint_skill"
                        android:id="@+id/skill_edittext"
                        android:maxLines="5"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:letterSpacing="0.15"
                    android:textColor="@color/colorRed"
                    android:text="@string/check_data_again"
                    android:visibility="invisible"
                    android:id="@+id/check_data_textview"
                    />
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="31dp"
            android:layout_marginEnd="81dp"
            android:orientation="vertical"
            android:gravity="bottom|right">
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/btn_next"
                android:letterSpacing="0.15"
                android:textSize="18sp"
                android:textColor="@color/textColorWhite"
                android:textAlignment="center"
                android:text="@string/next_step"
                android:onClick="onNextButtonClicked"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
